<%= form_tag :controller => 'sessions', :action => 'index'  do %>

  <div class="color-blue">
      <div>
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username] %>
      </div>

      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <div>
        <%= submit_tag "Log in", class: "btn btn-primary" %>
      </div>
  </div>

<% end %>

<%= link_to 'Back', {:controller => 'articles', :action => 'index'} , :class=>"btn btn-link" %>
