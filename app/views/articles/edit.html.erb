<%= form_for :article, url: {:controller => 'articles', :action => 'update', :id => @article.id}, method: :patch do |f| %>

    <% if @article.errors.any? %>
        <div id="error_explanation">
          <ul>
              <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
    <% end %>

    <h2> Edit post</h2>
    <div class="color-blue">

          <%= f.label :title %>
          <%= f.text_field :title %>

          By <%= @article.user.username%>

          <%= f.label :text %><br>
          <%= f.text_area :text %>

          <%= submit_tag "Edit", class: "btn btn-primary" %>
      </div>

<% end %>

<%= link_to 'Back', {:controller => 'articles', :action => 'index'}, :class=>"btn btn-link"  %>
